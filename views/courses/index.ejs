<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Courses</title>
</head>
<body>
<h2>Courses Table</h2>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Price</th>
      <th>Ingredient</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% courses.forEach(course => { %>
      <tr>
        <td>
          <a href="<%= `/courses/${course._id}` %>">
          <%= course.name %>
          </a>
        </td>
        <td><%= course.type %></td>
        <td><%= course.price %></td>
        <td><%= course.ingredient %></td>
        <td>
          <a href="<%=`/courses/${course._id}/edit` %>">Edit
          </a>
        </td>
        <td>
          <a href="<%= `courses/${course._id}/delete?_method=DELETE` %>"
       âž¥ onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>
       </td>
      </tr>
    <% }); %>
  </tbody>
</table>
</body>
</html>